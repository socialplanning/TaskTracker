List of tasks:

<metal:macro define-macro="item_list">

<ul tal:repeat="task c/tasks">
<li>
<span metal:define-slot="selected" />


<div tal:content="task/title"/>
<div tal:content="task/created"/>

<a tal:attributes="href python:h.url_for(controller='view', action='view', id=task.id)">view</a>
|
<a tal:attributes="href python:h.url_for(controller='view', action='show_update', id=task.id)">edit</a>
|
<a tal:attributes="href python:h.url_for(controller='view',action='destroy', id=task.id)">delete</a>


</li>
</ul>

</metal:macro>

<metal:do metal:use-macro="other_file/macros/item_list">
<span metal:fill-slot="selected"><input type="checkbox" disabled checked></span>

</metal:do>

<p>
<a tal:attributes="href python:h.url_for(controller='view', action='show_create')">Create a new task.</a>
</p>