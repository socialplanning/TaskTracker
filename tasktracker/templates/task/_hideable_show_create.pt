<metal:macro define-macro="show">

<!-- add a new subtask -->
<div id="create_section" tal:condition="python: h.has_permission('task', 'create', task_listID=c.tasklist.id)" class="create_section">

<div id="show_create">
<div metal:define-slot="subtask_link"/>
</div>

<a name="create_anchor" id="create_anchor"/>
