<metal:macro metal:define-macro="show_header">
<tr class="column-heading">
<th class="title-column">
<span class="taskitem">Task name</span>
</th>

<span tal:replace="structure python:h.sortableColumn('status')" />

<span tal:condition="python: c.tasklist.hasFeature('deadlines')"
      tal:replace="structure python:h.sortableColumn('deadline')" />

<span tal:replace="structure python:h.sortableColumn('priority')" />

<span tal:replace="structure python:h.sortableColumn('owner', 'assigned to')" />

<span tal:replace="structure python:h.sortableColumn('updated', 'updated')" />

</tr>

<tr class="task-filter-controls">
<td class="taskitem title-column second-line">&nbsp;</td>
<td class="status-column second-line"><span tal:replace="structure python: h.columnFilter('status', c.tasklist)"/></td>
<td class="deadline-column second-line"
    tal:condition="python: c.tasklist.hasFeature('deadlines')">
    <span tal:replace="structure python: h.columnFilter('deadline')" /></td>
<td class="priority-column second-line"><span tal:replace="structure python: h.columnFilter('priority')"/></td>
<td class="owner-column second-line"><span tal:replace="structure python: h.columnFilter('owner', c.tasklist)"/></td>
<td class="updated-column second-line"><span tal:replace="structure python: h.columnFilter('updated')"/></td>
</tr>

</metal:macro>
