<metal:macro metal:define-macro="show_header">
<tr class="column-heading">
<th>
<span class="taskitem">Task name</span>
</th>

<th>
<span tal:replace="structure python:h.sortableColumn('status')" />
</th>

<th>
<span tal:replace="structure python:h.sortableColumn('deadline')" />
</th>

<th>
<span tal:replace="structure python:h.sortableColumn('priority')" />
</th>

</tr>

<tr class="task-filter-controls">
<td class="taskitem">&nbsp;</td>
<td class="status-column"><span tal:replace="structure python: h.columnFilter('status', c.tasklist)"/></td>
<td class="deadline-column"><span tal:replace="structure python: h.columnFilter('deadline')"/></td>
<td class="priority-column"><span tal:replace="structure python: h.columnFilter('priority')"/></td>
</tr>

&nbsp;<hr/>
</metal:macro>
