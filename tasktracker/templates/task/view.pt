<tal:if condition="not:c/task/owner">
  Unowned
  <tal:if condition="python: h.has_permission(controller='task', action='claim', id=c.task.id)">
    -- 
    <a tal:attributes="href python:h.url_for(action='claim', id=c.task.id)">
      Claim this task?
    </a>
  </tal:if>
</tal:if>
