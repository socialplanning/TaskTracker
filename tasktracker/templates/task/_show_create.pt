<metal:macro define-macro="form">

<table>
<tr><td>
<label for="title"><b>Title:</b></label></td>
<td>
<span tal:replace="structure python: h.text_field_r('task', 'title')" />
</td></tr>

<tr><td>
<label for="text"><b>Text:</b></label></td><td>
<span tal:replace="structure python: h.text_area_r('task', 'text', rows=10, cols=80)" />
</td></tr>

<tr><td>
<label for="deadline"><b>Deadline:</b></label></td><td>
<span tal:replace="structure python: h.text_field_r('task', 'deadline')" />

<!--input name="deadline" id="deadline" type="text"><br/-->
</td></tr>

<tal:if condition="python: h.has_permission(controller='tasklist', action='private', id=c.tasklist.id)">
<tr><td>
<label for="deadline"><b>Private:</b></label></td><td>
<input name="private" id="private" type="checkbox" value="1"><br/>
</td></tr>
</tal:if>

</table>

</metal:macro>
