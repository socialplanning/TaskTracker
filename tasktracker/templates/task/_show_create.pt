<metal:macro define-macro="show_create">

<form tal:attributes="action python:h.url_for(action='create', controller='task')" method="post">

<table>
<tr><td>
<b>List:</b></td><td>
<span tal:replace="structure python: h.taskListDropDown(c.tasklist.id)" />
<br />
</td></tr>

<tr><td>
<label for="title"><b>Title:</b></label></td><td>
<input name="title" id="title" type="text"><br/>
</td></tr>

<tr><td>
<label for="text"><b>Text:</b></label></td><td>
<textarea name="text" id="text" rows=10 cols=80></textarea><br/>
</td></tr>

<tr><td>
<label for="deadline"><b>Deadline:</b></label></td><td>
<input name="deadline" id="deadline" type="text"><br/>
</td></tr>

<tal:if condition="python: h.has_permission(controller='tasklist', action='private', task_listID=c.tasklist.id)">
<tr><td>
<label for="deadline"><b>Private:</b></label></td><td>
<input name="private" id="private" type="checkbox" value="1"><br/>
</td></tr>
</tal:if>

</table>



<input type="submit" name="create" value="create">
</form>

</metal:macro>
